<%# TODO: 本来は@catじゃなく@notation_settingとかになるはず %>
<%= form_with(model: @cat) do |form| %>
  <% if @cat.errors.any? %>
    <div style="color: red">
      <h2><%= t('.error_notation') %></h2>

      <ul>
        <% @cat.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <ul>
    <% @cat.subjects.each do |subject| %>
      <li><%= subject.name %></li>
    <% end %>
  </ul>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
