<%= turbo_frame_tag subject do %>
  <%= form_with(model: subject) do |form| %>
    <%= render 'validation_error_message', resource: subject %>

    <div style="display: flex">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
      <%= form.submit %>
      <%= link_to t('.cancel'), subject_path(subject) %>
    </div>
  <% end %>
<% end %>
