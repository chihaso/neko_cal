<%= turbo_frame_tag 'new_subject' do %>
  <%= form_with(model: subject) do |form| %>
    <%= render 'validation_error_message', resource: subject %>

    <div style="display: flex">
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
      <%= form.hidden_field :cat_id, value: cat.id %>
      <%= form.submit %>
      <%= link_to t('.cancel'), cat_path(cat) %>
    </div>
  <% end %>
<% end %>
